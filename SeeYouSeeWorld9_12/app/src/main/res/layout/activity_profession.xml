<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profession"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sugan.qianwei.seeyouseeworld.activity.ProfessionActivity">
    <RelativeLayout
        android:id="@+id/profession_titlebar"
        android:background="@color/mediumseagreen"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <TextView
            android:onClick="profession_back"
            android:clickable="true"
            android:textSize="@dimen/large"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginLeft="3dp"
            android:drawableLeft="@drawable/icon_back_white"
            android:text="@string/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/profession"
            android:textSize="@dimen/xlarge"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ListView
        android:id="@+id/profession_listview"
        android:entries="@array/profession_list"
        android:paddingLeft="4dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
